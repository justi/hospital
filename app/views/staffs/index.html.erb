<p id="notice"><%= notice %></p>

<h1>Staffs</h1>

<%= simple_form_for :search, url: root_path, method: "GET", html: { class: 'form-inline' } do |f| %>
  <%= f.input :input_search, input_html: {value: ""} %>
  <%= f.submit "Search", class: "btn btn-primary" %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Pesel</th>
      <th>Occupation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.name %></td>
        <td><%= staff.surname %></td>
        <td><%= staff.pesel %></td>
        <td><%= staff.occupation %></td>
        <td><%= link_to 'Show', staff, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_staff_path(staff), class: "btn btn-warning #{'disabled' unless user_signed_in?}" %></td>
        <% if current_user.try(:admin?) %>
          <td><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger #{'disabled' unless user_signed_in?}" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Staff', new_staff_path %>
